{
    "openapi": "3.0.0",
    "info": {
       "version": "1.0",
       "title": "is2-24",
       "description": "API for shoe sellings",
       "license": {
          "name": "MIT",
          "url": "https://github.com/apiaryio/polls-api/blob/master/LICENSE"
       }
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/register":{
            "post": {
                "summary": "/register",
                "description": "Form registrazione",
                "requestBody": {
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/user"
                      }
                    }
                  },
                  "description": "user da creare"
                },
                "responses": {
                  "201": {
                    "description": "User registered successfully"
                  },
                  "400": {
                    "description": "user o pwd richiesti"
                  }
                }
              },
              "summary": "registrazione"
        },
        "/login":{
            "get":{
                "summary": "/login",
                "description": "form login",
                "responses": {
                    "200" : {
                        "description": "logged in"
                    }
                }
            },
            "post": {
                "summary": "/login",
                "description": "check user on db",
                "requestBody": {
                    "content": {
                      "application/json": {
                        "schema": {
                          "$ref": "#/components/schemas/user"
                        }
                      }
                    },
                    "description": "user da loggare"
                  },
                  "responses": {
                    "401": {
                      "description": "invalid credentials"
                    },
                    "500": {
                      "description": "error in login"
                    }
                  }
            },
            "summary": "gestione login"
        },
        "/home":{
            
        },
        "/vetrina":{
            
        },
        "/aggiungi":{
            
        },
        "/logout":{
            
        }
    },
    "components": {
        "schemas": {
            "user": {
                "type": "object",
                "required": [
                    "username",
                    "password"
                ],
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "shoe": {
                "type": "object",
                "requried": [
                    "brend",
                    "model"
                ],
                "properties": {
                    "brand": {
                        "type": "string"
                    },
                    "model": {
                        "type": "string"
                    }
                }
            }
        }
    }
 }