<!-- views/modifica.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifica Scarpa</title>
    <!-- Aggiungi link al tuo file CSS se necessario -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('navbar') %>
    <h1>Modifica Scarpa</h1>
    <form id="modifyShoeForm">
        <!-- Aggiungi i campi necessari per la modifica, ad esempio, campi input -->
        <label for="brand">Marca:</label>
        <input type="text" id="brand" name="brand" required>
        
        <label for="model">Modello:</label>
        <input type="text" id="model" name="model" required>
        
        <label for="description">Descrizione:</label>
        <input type="text" id="description" name="description" required></input>
        
        <label for="price">Prezzo:</label>
        <input type="number" id="price" name="price" required>
        
        <!-- Includi un campo nascosto per memorizzare l'ID della scarpa -->
        <input type="hidden" id="shoeId" name="shoeId">

        <!-- Aggiungi il pulsante "Modifica Scarpa" con l'evento onclick -->
        <button type="button" id="modificaButton">Modifica Scarpa</button>
    </form>

    <!-- Includi il tuo script JavaScript per la modifica -->
    <script src="/js/modifica.js"></script>
    
    <!-- Aggiungi uno script separato per gestire l'esecuzione dello script di modifica -->
    <script src="/js/modifica.js"></script>
</body>
</html>
